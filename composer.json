{
  "name": "https://github.com/DoSomething/mbc-userAPI-registration",
  "type": "project",
  "version": "0.3.0",
  "description": "A consumer app for the Message Broker system that consumes entries on the userAPIRegistrationQueue to make entries to the UserAPI / database.",
  "keywords": ["message broker"],
  "homepage": "https://github.com/DoSomething/mbc-user-campaign",
  "license" : "MIT",
  "authors":
    [
      {
        "name": "DoSomething and contributors",
        "homepage": "http://www.dosomething.org"
      }
    ],
  "require": {
    "php": ">= 5.3.0",
    "DoSomething/messagebroker-phplib": "0.2.*",
    "dosomething/mb-toolbox": "0.8.*",
    "dosomething/stathat": "1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.0.*"
  },
  "autoload": {
    "psr-4": {
      "DoSomething\\MBC_UserAPI_Registration\\": "src/"
    }
  },
  "scripts": {
    "pre-install-cmd": [
      "./bin/install.sh"
    ],
    "pre-package-update": [
      "git checkout master",
      "git pull"
    ],
    "post-package-update": [
      "./vendor/bin/phpunit tests"
    ],
    "post-package-uninstall": [
      "./bin/uninstall.sh"
    ]
  }
}
